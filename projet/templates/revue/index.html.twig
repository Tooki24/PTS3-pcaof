{% extends 'base.html.twig' %}

{% block title %}Hello RevueController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 class="text-center">Revues</h1>

    {% for revue in revues %}
            <a href="{{ path('detail_revue', {'slug': revue.slug}) }}">
                <div class="m-4">
                    {% if revue.imageName is not null %}
                        <IMG src="{{ vich_uploader_asset(revue,'imageFile') }}" alt="image de la revue : {{ revue.imageName }}" width="150px">
                    {% endif %}
                    <h2>N°{{ loop.index }} / {{ revue.title }}</h2>
                    <h3>{{ revue.getDatePubli()|date('d/m/Y') }}</h3>
                    <h3>Nombre d'articles : {{ revue.getNbArticle(revue) }}</h3>
                    <h3>Thème : {{ revue.theme }}</h3>
                </div>
            </a>
    {% endfor %}

</div>
{% endblock %}