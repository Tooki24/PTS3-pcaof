{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    <div class="container m-4" style="height: 200px; border: 1px solid black">
        Bannier
    </div>
     <!-- TEXT ASSO -->
    <p class="text-black text">
        PCAoF (Popular Culture Association of France est une asso
        qui regroupe des chercheurs et des amateurs et passionnés de culutre populaire
    </p>
    <h1 class="">Objectifs de l'association</h1>
    <ul>
        <li>BLABLABLABLA BLABLABLABLA BLABLABLABLA BLABLABLABLA
            BLABLABLABLA BLABLABLABLA BLABLABLABLA</li>
        <li>BLABLABLABLA BLABLABLABLA BLABLABLABLA
            BLABLABLABLABLABLABLABLA BLABLABLABLA</li>
    </ul>

    <div class="container">
        <h1>Derniere publi</h1>


        <div class="col m-4" >
            {% for publication in publications %}
                <div class="row" style="border: black 1px solid; border-radius: 5%; padding: 20px; margin: 10px">
                    <div class="col">
                        <h2>{{ publication.title }}</h2>
                        <p>{{ publication.datePubli|date('d/m/Y') }}</p>
                    </div>
                    <div class="col d-flex justify-content-center align-items-center">
                        <h1>{{ publication.id }}</h1>
                    </div>
                </div>
            {% endfor %}

            <h1>Derniere Revues</h1>

            {% for revue in revues %}
                <div class="row" style="border: black 1px solid; border-radius: 5%; padding: 20px; margin: 10px">
                    <div class="col">
                        <h2>{{ revue.title }}</h2>
                        <p>{{ revue.datePubli|date('d/m/Y') }}</p>
                    </div>
                    <div class="col d-flex justify-content-center align-items-center">
                        <h1>{{ revue.id }}</h1>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="container">
        <h2>Colloque à venir</h2>
        {% for colloque in colloques %}
        <div class="container mt-4">
            <h1 class="text-center">{{ colloque.name }}</h1>
            <h4>Theme ...</h4>
            <p>{{ colloque.description|u.truncate(200, ' ...', false) }}</p>
            <p>Du {{ colloque.dateD|date('d/m/Y') }} au {{ colloque.dateF|date('d/m/Y') }}</p>
            <p>Lieu : {{ colloque.lieu }}</p>
            <a class="align-top"><button type="button" class="btn btn-primary">Voir PLUS</button></a>
        </div>
        {% endfor %}
    </div>

{% endblock %}
