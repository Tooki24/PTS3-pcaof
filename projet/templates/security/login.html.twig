<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">

        <!-- Bootstrap core CSS -->
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">

        <!-- Style Theme -->
        <link href="{{ asset('css/style.css') }}" rel="stylesheet">

        <title>{% block title %}Login PCAOF{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

    </head>
    <body class="d-flex flex-column h-100">
    {% block body %}
        <section class="vh-100">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-6 text-black d-flex flex-column align-items-center justify-content-around">

                        <div class="px-5 ms-xl4 m-4">
                            <a href="{{ path('home') }}"><img src="{{ asset('img/logo/logoColor.png') }}" class="img-fluid "></a>
                        </div>

                        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                            <form style="width: 23em" method="post">

                                {% if error %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}

                                {% if app.user %}
                                    <div class="mb-3">
                                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                                    </div>
                                {% endif %}
                                <h2 class="fw-normal mb-3 pb-3 text-center" style="letter-spacing: 1px">Login</h2>

                                <div class="form-outiline mb-4">
                                    <label for="inputUsername">Identifiant</label>
                                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
                                </div>
                                <div class="form-outline mb-4">
                                    <label for="inputPassword">Mot de passe</label>
                                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                                </div>

                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}"
                                >
                                <div class="pt-1 mb-4">
                                    <button class="btn btn-lg btn-block btn-co" type="submit">
                                        Connexion
                                    </button>
                                </div>

                                <p class="small mb-5 pb-lg-2"><a class="text-muted" href="{{ path('app_forgot_password_request') }}">Forgot password?</a></p>

                            </form>
                        </div>
                    </div>

                    <div class="col-sm-6 px-0 d-none d-sm-block">
                        <img src="{{ asset('img/imgAdmin.jpg') }}" alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
                    </div>
                </div>
            </div>
        </section>
    {% endblock %}

    <!-- SCRIPT JS -->
    <link href="{{ asset('js/scripts.js') }}">
    </body>
</html>
