{% extends 'base.html.twig' %}

{% block title %}<title>Publication {{ publication.title}} | PCAoF</title>{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <p>De{% for auteur in publication.getPeople %}  
         {{ auteur.firstName }} {{ auteur.name }},
        {%  endfor %}
    </p>
    <h3>{{ publication.title }}</h3>
    <p>{{ publication.datePubli|format_datetime(locale='fr',pattern="d MMMM Y") }}</p>
    {% if publication.imageName is not null %}
        <img src="{{asset (vich_uploader_asset (publication, 'imageFile'))}}" width="100%">
    {% endif %}
    <p>{{ publication.resume }}</p>
    <a href="{{asset (vich_uploader_asset (publication, 'pdfFile'))}}" download><img src="{{ asset('img/telecharger.png') }}" width="50px" ></a>
    <p><a href="{{asset (vich_uploader_asset (publication, 'pdfFile'))}}" target="_blank">Lire la publication</a></p>
</div>
{% endblock %}
