{% extends 'base.html.twig' %}

{% block title %}Colloque index{% endblock %}

{% block body %}
    <h1>Colloque index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateD</th>
                <th>DateF</th>
                <th>Nom</th>
                <th>Lieu</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for colloque in colloques %}
            <tr>
                <td>{{ colloque.id }}</td>
                <td>{{ colloque.dateD ? colloque.dateD|date('Y-m-d') : '' }}</td>
                <td>{{ colloque.dateF ? colloque.dateF|date('Y-m-d') : '' }}</td>
                <td>{{ colloque.nom }}</td>
                <td>{{ colloque.lieu }}</td>
                <td>{{ colloque.description }}</td>
                <td>
                    <a href="{{ path('colloque_show', {'id': colloque.id}) }}">show</a>
                    <a href="{{ path('colloque_edit', {'id': colloque.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('colloque_new') }}">Create new</a>
{% endblock %}
